{
    "version": 2,
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build"
      }
    ],
    "rewrites": [
        { 
            "source": "/api/(.*)", 
            "destination": "/backend/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ],
    "crons": [
      {
        "path": "/fetch-packets",
        "schedule": "0 6 * * *"
      }
    ]
  }
